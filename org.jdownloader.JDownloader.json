{
    "app-id": "org.jdownloader.JDownloader",
    "branch": "stable",
    "tags": [
        "proprietary"
    ],
    "runtime": "org.freedesktop.Platform",
    "runtime-version": "1.6",
    "sdk": "org.freedesktop.Sdk",
    "command": "jd-wrapper",
    "finish-args": [
        "--socket=x11",
        "--share=ipc",
        "--filesystem=~/JDownloader:create",
        "--share=network"
    ],
    "modules": [
        {
            "name": "jdownloader",
            "buildsystem": "simple",
            "build-commands": [
                "install -Dm755 jd-wrapper.sh /app/bin/jd-wrapper",
                "install -Dm644 org.jdownloader.JDownloader.desktop /app/share/applications/org.jdownloader.JDownloader.desktop",
                "install -Dm644 org.jdownloader.JDownloader.png /app/share/icons/hicolor/512x512/apps/org.jdownloader.JDownloader.png",
                "install -Dm644 org.jdownloader.JDownloader.appdata.xml /app/share/appdata/org.jdownloader.JDownloader.appdata.xml"
            ],
            "sources": [
                {
                    "type": "script",
                    "dest-filename": "apply_extra",
                    "commands": [
                        "install -Dm644 /app/share/applications/org.jdownloader.JDownloader.desktop export/share/applications/org.jdownloader.JDownloader.desktop"
                    ]
                },
                {
                    "type": "file",
                    "path": "jd-wrapper.sh"
                },
                {
                    "type": "file",
                    "path": "org.jdownloader.JDownloader.desktop"
                },
                {
                    "type": "file",
                    "path": "org.jdownloader.JDownloader.png"
                },
                {
                    "type": "file",
                    "path": "org.jdownloader.JDownloader.appdata.xml"
                },
                {
                    "type": "extra-data",
                    "filename": "JD2Setup.sh",
                    "only-arches": [
                        "x86_64"
                    ],
                    "url": "http://installer.jdownloader.org/JD2Setup_x64.sh",
                    "sha256": "ddd1a997afaf60c981fbfb1a1f3a600ff7bad7fccece9f2508fb695b8c2f153d",
                    "size": 50621986
                },
                {
                    "type": "extra-data",
                    "filename": "JD2Setup.sh",
                    "only-arches": [
                        "i386"
                    ],
                    "url": "http://installer.jdownloader.org/JD2Setup_x86.sh",
                    "sha256": "f928e37d1fa40e3898098c69da00d23903640899e6e54f94b465795426456097",
                    "size": 52791231
                }
            ]
        }
    ]
}
